<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Create a new listing</h3>
            <form method="POST" action="/listings" class="needs-validation" novalidate>
                <!-- Above we used novalidate and needs-validation class for checking all the needed information entered or not in the form -->
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="Add a Cachy Title" type="text" class="form-control"
                        required />
                    <div class="valid-feedback">Title is good!</div>
                    <div class="invalid-feedback">enter valid title</div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" type="text" required></textarea>
                    <div class="valid-feedback">Description is good!</div>
                    <div class="invalid-feedback">Add some description</div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input name="listing[image]" placeholder="enter image Link/url" type="text" class="form-control">
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="enter price" class="form-control" required>
                        <div class="valid-feedback">Price is actually good!</div>
                        <div class="invalid-feedback">Enter valid Price!</div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" placeholder="enter country" type="text" class="form-control"
                            required>
                        <div class="valid-feedback">Thats Awesome Country..</div>
                        <div class="invalid-feedback">Enter Valid Country Name</div>
                    </div>

                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="enter location" type="text" class="form-control"
                        required>
                    <div class="valid-feedback">Nice Loaction</div>
                    <div class="invalid-feedback">Enter Valid Location</div>
                </div>
                <br>
                <button class="btn btn-dark add-btn mt-3">Add</button>
            </form>
        </div>
    </div>